/* Libraries the modules need to be linked against */

LIBRARIES += -lm
INCLUDE_DIRS +=
LIBRARY_DIRS +=

/* Modules for the modules library */

AddModule(util,src/util,util_base boot)
AddModule(checkpt,src/util/checkpt,checkpt checkpt_io)
AddModule(mtrand,src/util/mtrand,mtrand)
AddModule(mp,src/util/mp,mp)
AddModule(aais,src/util/mp/aais,)
AddModule(relay,src/util/relay,)
AddModule(relay_p2p,src/util/relay/p2p,)
AddModule(relay_dmp,src/util/relay/dmp,)
AddModule(io,src/util/io,)
AddModule(pipelines,src/util/pipelines,pipelines_serial pipelines_thread)
AddModule(profile,src/util/profile,profile)
AddModule(v4,src/util/v4,)

AddModule(grid,src/grid,ops partition grid_structors grid_comm)

AddModule(material,src/material,material)

AddModule(field_advance,src/field_advance,field_advance)

AddModule(standard_field_advance,src/field_advance/standard,advance_b advance_e energy_f compute_curl_b compute_rhob compute_div_e_err compute_rms_div_e_err clean_div_e compute_div_b_err compute_rms_div_b_err clean_div_b local remote sfa vacuum_advance_e vacuum_compute_curl_b vacuum_clean_div_e vacuum_compute_div_e_err vacuum_compute_rhob vacuum_energy_f)

/* FIXME: MERGE ACCUMULATORS FILES */
AddModule(sf_interface,src/sf_interface,interpolator_array accumulator_array clear_accumulators reduce_accumulators unload_accumulator hydro_array)

AddModule(species_advance,src/species_advance,species_advance)

AddModule(standard_particle_advance,src/species_advance/standard,advance_p center_p uncenter_p energy_p hydro_p move_p rho_p sort_p)

AddModule(emitter,src/emitter,emitter child_langmuir)

/* FIXME: BRING BACK LINK */
