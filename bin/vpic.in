echo "@CXX@ @DEFS@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_CPPFLAGS@ -I@prefix@/src/include -I. @prefix@/main.cxx @prefix@/wrapper.cxx -DINPUT_DECK=$1 -o $deck.@EXTENSION@ -L@prefix@/lib/.libs -lvpic -L. @EXTRA_LDFLAGS@ @EXTRA_LIBS@ -lm"

@CXX@ @DEFS@ @CPPFLAGS@ @CXXFLAGS@ @EXTRA_CPPFLAGS@ -I@prefix@/src/include -I. @prefix@/deck/main.cxx @prefix@/deck/wrapper.cxx -DINPUT_DECK=$1 -o $deck.@EXTENSION@ -L@prefix@/lib/.libs -lvpic -L. @EXTRA_LDFLAGS@ @EXTRA_LIBS@ -lm
