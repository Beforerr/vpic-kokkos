#autoconf#######################################################################
# test machine configuration file
################################################################################

################################################################################
# BUILDSTYLE
################################################################################

BUILDSTYLE=dacs_relay_hybrid_cell

################################################################################
# CFLAGS - configure C compiler behavior
################################################################################

CFLAGS="-Wall -Werror -pedantic -std=c99   -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2                -g -O2 -ffast-math -fno-unsafe-math-optimizations                      -fomit-frame-pointer -march=opteron -mfpmath=sse"

################################################################################
# CXXFLAGS - configure C++ compiler behavior
################################################################################

CXXFLAGS="-Wall -Werror -pedantic -std=c++98 -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2 -Wno-long-long -g -O2 -ffast-math -fno-unsafe-math-optimizations -fno-strict-aliasing -fomit-frame-pointer -march=opteron -mfpmath=sse -DUSE_V4_SSE"

################################################################################
# EXTENSION - executable extension
################################################################################

EXTENSION=op

################################################################################
# ADDRESSING - configure pointer size (32|64)[32]
################################################################################

ADDRESSING=64

################################################################################
# DACS
################################################################################
DACS_CPPFLAGS="-I/opt/cell/sdk/prototype/usr/include"
DACS_LDFLAGS="-L/opt/cell/sdk/prototype/usr/lib64"
DACS_LIBS="-ldacs_hybrid"

################################################################################
# DACS_LAUNCH - specify whether DaCS should use local or remote file for launch
# location is relative to the Opteron
################################################################################
DACS_LAUNCH=local

################################################################################
# MPI configuration
# MPI_CPPFLAGS - configure MPI preprocessor flags
# MPI_LDFLAGS - configure MPI link flags
# MPI_LIBS - configure MPI library names
################################################################################

MPI_CPPFLAGS=`mpicc --showme:compile`
MPI_LDFLAGS=`mpicc --showme:link | sed 's, -l[^ ]*,,g'`
MPI_LIBS=`mpicc --showme:link | sed 's, -[^l][^ ]*,,g;s,-pthread,,g' | sed 's, *,,' | sed 's, $,,'`

################################################################################
# PPU CFLAGS - configure C compiler behavior
################################################################################

PCFLAGS="-Wall -Werror -pedantic -std=c99   -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2                -g -O2 -ffast-math -fno-unsafe-math-optimizations                      -fomit-frame-pointer -DPPE_ROUNDING_MODE=FE_TONEAREST -mcpu=cell -maltivec"

################################################################################
# PPU CXXFLAGS - configure C++ compiler behavior
################################################################################

PCXXFLAGS="-Wall -Werror -pedantic -std=c++98 -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2 -Wno-long-long -g -O2 -ffast-math -fno-unsafe-math-optimizations -fno-strict-aliasing -fomit-frame-pointer -DPPE_ROUNDING_MODE=FE_TONEAREST -mcpu=cell -maltivec -DUSE_V4_ALTIVEC"

################################################################################
# OpenSSL
################################################################################
PPU_OPENSSL="/users/bergen/packages"

################################################################################
# PPU_DACS
################################################################################
PPU_DACS_CPPFLAGS="-I/opt/cell/sysroot/opt/cell/sdk/prototype/usr/include"
PPU_DACS_LDFLAGS="-rdynamic -L/opt/cell/sysroot/opt/cell/sdk/prototype/usr/lib64"
PPU_DACS_LIBS="-ldacs_hybrid -lstdc++"

################################################################################
# SPU CFLAGS - configure C compiler behavior
################################################################################

SCFLAGS="-ffunction-sections -Wall -Werror -pedantic -std=c99   -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2      -O2 -ffast-math -fno-unsafe-math-optimizations                      -fomit-frame-pointer"

################################################################################
# SPU CXXFLAGS - configure C++ compiler behavior
################################################################################

SCXXFLAGS="-ffunction-sections -Wall -Werror -pedantic -std=c++98 -D_XOPEN_SOURCE=600 -Wstrict-aliasing=2    -O2 -ffast-math -fno-unsafe-math-optimizations -fno-strict-aliasing -fomit-frame-pointer -fno-exceptions -fno-rtti -DUSE_V4_SPU"

################################################################################
# SPU_MODULES - spe programs to link
################################################################################

SPU_MODULES="root_segment"

################################################################################
# LIBSPE2 - libspe2 library
################################################################################

LIBSPE2="/opt/cell/sysroot/usr"

################################################################################
# SPULIBS - miscellaneous SPE libraries
################################################################################

SPULIBS="/opt/cell/sysroot/opt/cell/sdk/usr/spu"
