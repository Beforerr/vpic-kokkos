// Test acceleration in a constant electric field
//
// dp / dt = q E
// du / dt = q E / m c
// u_new = u_old + 2 q dt E / 2 m c
// u_new = u_old + 2 E ( q dt / 2 m c )
//
// u(n)  = 2 E ( q dt / 2 m c ) * n
// With q/m=1, dt=1, c=1, E=1
// u(n) = E n
//
// This input deck was written by:
//   Kevin J Bowers, Ph.D.
//   Plasma Physics Group (X-1)
//   Applied Physics Division
//   Los Alamos National Lab
// March/April 2004 - conversion of c++ test code into an input deck

begin_globals {
};

begin_initialization {
  double L     = 1e10;
  int    npart = 21;
  int    nstep = 100;

  grid->dt = 1;
  grid->cvac = 1;
  grid->eps0 = 1;
  define_periodic_grid( 0, 0, 0,   // Grid low corner
                        L, L, L,   // Grid high corner
                        1, 1, 1,   // Grid resolution
                        1, 1, 1 ); // Processor configuration

  define_material("vacuum",1.0,1.0,0.0);
  define_species("test_species",1.,npart);

  finalize_materials();
  finalize_species();

  field(1,1,1).ex  = 1;
  field(1,2,1).ex  = 1;
  field(1,1,2).ex  = 1;
  field(1,2,2).ex  = 1;

  field(1,1,1).ey  = 2;
  field(1,1,2).ey  = 2;
  field(2,1,1).ey  = 2;
  field(2,1,2).ey  = 2;

  field(1,1,1).ez  = 3;
  field(2,1,1).ez  = 3;
  field(1,2,1).ez  = 3;
  field(2,2,1).ez  = 3;

  species_id test_species = lookup_species("test_species");
  repeat(npart) {
    error_code err = inject_particle( test_species,
                                      uniform_rand(0,L),
                                      uniform_rand(0,L),
                                      uniform_rand(0,L),
                                      0, 0, 0,
                                      uniform_rand(0,1) );
    if( err!=SUCCESS ) sim_log("Injection error - " << err);
  }

  // Hack into vpic internals
  int failed = 0;
  load_interpolator( interpolator, field, grid );
  species_t *sp = find_species_id(test_species,species_list);
  for( int n=0; n<nstep; n++ ) {
    advance_p(sp->p,sp->np,sp->q_m,sp->pm,sp->max_nm,
              accumulator,interpolator,grid);
    for( int m=0; m<npart; m++ ) {
      if( sp->p[m].ux != 1*(n+1) ||
          sp->p[m].uy != 2*(n+1) ||
          sp->p[m].uz != 3*(n+1) ) {
        failed++;
        sim_log( n << " " <<
                 m << " " <<
                 sp->p[m].i  << " " <<
                 sp->p[m].dx << " " <<
                 sp->p[m].dy << " " <<
                 sp->p[m].dz << " " <<
                 sp->p[m].ux << " " <<
                 sp->p[m].uy << " " <<
                 sp->p[m].uz << " " <<
                 sp->p[m].q );
      }
    }
  }
  if( failed ) sim_log( "FAIL" );
  else         sim_log( "pass" );
  
  abort(0);
}

begin_diagnostics {
}

begin_particle_injection {
}

begin_current_injection {
}

begin_field_injection {
}

