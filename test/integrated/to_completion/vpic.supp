# Valgrind bug reports leak in dlopen

{
   dlopen bug
   Memcheck:Leak
   ...
   fun:_dl_open
   ...
}

{
   dlopen bug
   Memcheck:Leak
   ...
   fun:_dl_allocate_tls
   ...
}

# Suppress invalid read/write and unaddressable bytes in MPI calls

{
   MPI-Addr2
   Memcheck:Addr2
   ...
   fun:*MPI_*
   ...
}

{
   MPI-Addr4
   Memcheck:Addr4
   ...
   fun:*MPI_*
   ...
}

{
   MPI-Addr8
   Memcheck:Addr8
   ...
   fun:*MPI_*
   ...
}

{
   MPI-Unaddressable
   Memcheck:User
   ...
   fun:*MPI_*
   ...
}

{
   MPI-Virtual leaks
   Memcheck:Leak
   fun:*alloc
   ...
   obj:*mpi*
   ...
}

